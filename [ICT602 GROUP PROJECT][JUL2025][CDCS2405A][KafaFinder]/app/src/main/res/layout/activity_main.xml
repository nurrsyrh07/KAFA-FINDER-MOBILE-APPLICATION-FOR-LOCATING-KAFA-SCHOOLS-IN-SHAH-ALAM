<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/soft_green_bg"
    tools:context=".MainActivity">

    <!-- Top Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/topToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#799567"
        android:elevation="4dp"
        app:title=""
        app:popupTheme="@style/MyPopupMenuStyle">
        <TextView
            android:id="@+id/pageTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Home"
            android:textSize="25sp"
            android:textColor="#E6F0DC"
            android:fontFamily="@font/massyabhan"
            android:layout_gravity="center" />
        <!-- Logo inside Toolbar -->
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/logorb"
            android:contentDescription="Logo" />
    </androidx.appcompat.widget.Toolbar>

    <!-- Centered Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <!-- App Logo -->
        <ImageView
            android:id="@+id/appLogo"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/logorb"
            android:layout_marginBottom="32dp" />

        <!-- Kafa Directory Button -->
        <LinearLayout
            android:id="@+id/btnOpenMap"
            android:layout_width="250dp"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/rounded_box"
            android:layout_marginBottom="24dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/directorykafa" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kafa Directory"
                android:fontFamily="@font/kultum_ramadhan"
                android:textSize="18sp"
                android:textColor="#000"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <!-- Feedback Button -->

        <LinearLayout
            android:id="@+id/btnFeedback"
            android:layout_width="250dp"
            android:layout_height="100dp"
            android:background="@drawable/rounded_box"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/feedbackkafafinder" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/kultum_ramadhan"
                android:text="Feedback"
                android:textColor="#000"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnDeveloper"
            android:layout_width="250dp"
            android:layout_height="100dp"
            android:background="@drawable/rounded_box"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginTop="24dp"> <!-- ðŸ‘ˆ Add this -->

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/developerr" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/kultum_ramadhan"
                android:text="Developer"
                android:textColor="#000"
                android:textSize="18sp" />
        </LinearLayout>



    </LinearLayout>

</LinearLayout>
