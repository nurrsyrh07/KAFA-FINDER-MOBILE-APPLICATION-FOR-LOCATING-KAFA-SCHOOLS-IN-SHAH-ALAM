<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#A5D6A7"
    android:layout_marginBottom="10dp"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- Normal Display -->
    <TextView
        android:id="@+id/nameView"
        android:text="Name"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/feedbackView"
        android:text="Feedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RatingBar
        android:id="@+id/ratingDisplay"
        android:numStars="5"
        android:stepSize="1"
        android:isIndicator="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!-- Editable Version -->
    <EditText
        android:id="@+id/editNameField"
        android:hint="Edit Name"
        android:visibility="gone"
        android:background="#C8E6C9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/editFeedbackField"
        android:hint="Edit Feedback"
        android:visibility="gone"
        android:background="#375937"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RatingBar
        android:id="@+id/editRatingBar"
        android:numStars="5"
        android:stepSize="1"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!-- Buttons -->
    <LinearLayout
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end">

        <Button
            android:id="@+id/editButton"
            android:text="Edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#66BB6A"
            android:textColor="#FFF" />

        <Button
            android:id="@+id/saveButton"
            android:text="Save"
            android:visibility="gone"
            android:layout_marginLeft="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#2E7D32"
            android:textColor="#FFF" />

        <Button
            android:id="@+id/deleteButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:background="#FFFFFF"
            android:text="Delete"
            android:textColor="#FFF"
            android:textColorLink="#1A351A" />
    </LinearLayout>
</LinearLayout>
