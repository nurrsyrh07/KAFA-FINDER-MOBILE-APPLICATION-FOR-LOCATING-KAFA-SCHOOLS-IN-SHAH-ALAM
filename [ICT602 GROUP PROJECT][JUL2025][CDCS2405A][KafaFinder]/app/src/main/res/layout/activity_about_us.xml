<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/soft_green_bg"
    >

    <!-- ✅ Fixed Top Navigation Bar (Toolbar) -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/topToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#799567"
        android:elevation="4dp"
        app:title=""
        app:popupTheme="@style/MyPopupMenuStyle">

        <!-- Toolbar title in center -->
        <TextView
            android:id="@+id/pageTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About Us"
            android:textSize="25sp"
            android:textColor="#E6F0DC"
            android:fontFamily="@font/massyabhan"
            android:layout_gravity="center" />

        <!-- Logo -->
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/logorb"
            android:contentDescription="Logo" />
    </androidx.appcompat.widget.Toolbar>

    <!-- ✅ Scrollable Content Below -->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="40dp"
            android:padding="24dp">

            <!-- App Logo -->
            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/logokafafinder"
                android:contentDescription="App Logo"
                android:layout_marginBottom="16dp" />

            <!-- Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="About Kafa Finder"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginBottom="12dp" />

            <!-- Description -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kafa Finder helps users easily locate KAFA schools around Shah Alam. Our mission is to simplify the search process using an interactive map and real-time location."
                android:textSize="16sp"
                android:textColor="#333333"
                android:textAlignment="center"
                android:gravity="center"
                android:layout_marginBottom="24dp" />

            <!-- Contact Info -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact Us:\nkafafinder@email.com\n+60 12-345 6789"
                android:textSize="16sp"
                android:textColor="#555555"
                android:textAlignment="center"
                android:gravity="center" />
        </LinearLayout>
</LinearLayout>
